<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context="com.example.reza.dijitalwatch.MainActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2 1"
        android:textSize="110dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="35dp"
        android:textColor="@color/blue"
        android:id="@+id/time"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=":"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/time"
        android:textSize="110dp"
        android:textColor="@color/blue"
        android:id="@+id/time0"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="02"
        android:textSize="110dp"
        android:textColor="@color/blue"
        android:id="@+id/time1"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/time0"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20"
        android:layout_toRightOf="@+id/time1"
        android:layout_marginTop="93dp"
        android:textSize="16dp"
        android:textColor="@color/blue"
        android:id="@+id/time2"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="september"
        android:textSize="16dp"
        android:textColor="@color/blue"
        android:id="@+id/time4"
        android:paddingLeft="38dp"
        android:layout_below="@+id/time"
        />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10"
            android:textSize="16dp"
            android:layout_below="@+id/time"
            android:paddingLeft="15dp"
            android:layout_toRightOf="@+id/time4"
            android:textColor="@color/blue"
            android:id="@+id/time5"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2012"
            android:textSize="16dp"
            android:layout_below="@+id/time0"
            android:layout_toRightOf="@id/time5"
            android:paddingLeft="16dp"
            android:textColor="@color/blue"
            android:id="@+id/time6"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="monday"
            android:textSize="16dp"
            android:layout_toRightOf="@+id/time6"
            android:layout_below="@+id/time1"
            android:paddingLeft="92dp"
            android:textColor="@color/blue"
            android:id="@+id/time7"/>

</RelativeLayout>
