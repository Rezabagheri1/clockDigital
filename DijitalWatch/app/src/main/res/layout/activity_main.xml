<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context="com.example.reza.dijitalwatch.MainActivity">

<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  "
        android:textSize="110dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="55dp"
        android:textColor="@color/blue"
        android:id="@+id/saat"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=":"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_marginTop="40dp"
        android:layout_toRightOf="@+id/saat"
        android:textSize="110dp"
        android:textColor="@color/blue"
        android:id="@+id/time0"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  "
        android:textSize="110dp"
        android:textColor="@color/blue"
        android:id="@+id/daghighe"
        android:layout_marginTop="40dp"
        android:layout_toRightOf="@+id/time0"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  "
        android:layout_toRightOf="@+id/daghighe"
        android:layout_marginTop="110dp"
        android:textSize="16dp"
        android:textColor="@color/blue"
        android:id="@+id/saniye"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="april"
        android:textSize="16dp"
        android:textColor="@color/blue"
        android:id="@+id/time4"
        android:paddingLeft="58dp"
        android:layout_below="@+id/saat"
        />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10"
            android:textSize="16dp"
            android:layout_below="@+id/saat"
            android:paddingLeft="15dp"
            android:layout_toRightOf="@+id/time4"
            android:textColor="@color/blue"
            android:id="@+id/time5"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2018"
            android:textSize="16dp"
            android:layout_below="@+id/time0"
            android:layout_toRightOf="@id/time5"
            android:paddingLeft="16dp"
            android:textColor="@color/blue"
            android:id="@+id/time6"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="tuesday"
            android:textSize="16dp"
            android:layout_toRightOf="@+id/time6"
            android:layout_below="@+id/daghighe"
            android:paddingLeft="72dp"
            android:textColor="@color/blue"
            android:id="@+id/time7"/>
</RelativeLayout>




      <Button
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/click"
          android:text="click"
          android:layout_marginTop="250dp"
          android:layout_marginLeft="120dp"
          />

</RelativeLayout>